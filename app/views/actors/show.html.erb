<% if File.exists? Rails.root.join("public", "images", "#{@actor.id}.jpg") %>
  <%= image_tag "/images/#{@actor.id}.jpg" %>
<% end %>

<h3><%= @actor.name %></h3>

<div class="row">

  <% @actor.movies.each do |movie| %>
  
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= link_to image_tag(movie.image), movie_url(movie) %>
        <div class="caption">
          <h3><%= link_to movie.name, movie_url(movie) %></h3>
          <p><%= movie.summary %></p>
          <% if current_user && current_user.role == "admin" %>
            <p>
              <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-default" %>
              <%= link_to "Delete", movie_path(movie), 
                    method: :delete, 
                    class: "btn btn-danger",
                    data: { confirm: "Really?" } %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  
  <% end %>

</div>